<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12 col-md-12 main">
      <div class="table-responsive">
      <h1 class="page-header">Activities, Places & Things To Do</h1>

      <table id="activity-data-table" class="table-bordered table-striped table-hover table-condensed" cellspacing="0" width="100%">
        <thead>
          <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Location</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Description</th>
            <th>Rating</th>
            <th>Url</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Location</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Description</th>
            <th>Rating</th>
            <th>Url</th>
            <th colspan="3"></th>
          </tr>
        </tfoot>
        <tbody>
         <% @activities.each do |activity| %>
          <tr>
            <td><%= link_to activity.name, activity.url %></td>
            <td><%= activity.category.name %></td>
            <td><%= activity.location %></td>
            <td><%= activity.latitude %></td>
            <td><%= activity.longitude %></td>
            <td><%= activity.description %></td>
            <td><%= activity.rating %></td>
            <td><%= link_to 'Show', activity %></td>
            <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
            <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>



<br>
